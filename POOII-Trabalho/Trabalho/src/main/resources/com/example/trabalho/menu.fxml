<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="820.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="com.example.trabalho.menuController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <center>
            <Button fx:id="jogarBtn" mnemonicParsing="false" onAction="#jogarButtonClick" text="Juegar" BorderPane.alignment="CENTER" />
         </center>
         <bottom>
            <Button fx:id="baralhoBtn" mnemonicParsing="false" onAction="#baralhoButtonClick" text="Baralho" BorderPane.alignment="CENTER" />
         </bottom>
         <top>
            <Label fx:id="titleLbl" text="Nome a ser definido" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets top="20.0" />
               </BorderPane.margin>
            </Label>
         </top>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </BorderPane>
      <Button fx:id="sairBtn" mnemonicParsing="false" onAction="#sairButtonClick" text="Sair">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
